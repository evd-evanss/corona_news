<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/header"
        android:backgroundTint="@color/colorRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activityStatistic_imageView_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:tint="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/activityStatistic_textView_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sen_regular"
            android:text="Brazil"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/activityStatistic_textView_country2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_regular"
            android:text="Estatisticas"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/activityStatistic_textView_country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/itemFeed_linearLayout_graph"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="bottom|center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/tableLayout"
                app:layout_constraintStart_toStartOf="@+id/tableLayout"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/itemStatistic_view_total"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorRed" />

                <View
                    android:id="@+id/itemStatistic_view_recovered"
                    android:layout_width="50dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorGreen" />

                <View
                    android:id="@+id/itemStatistic_view_deaths"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorFineGray" />

                <View
                    android:id="@+id/itemStatistic_view_recoveriesRate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorYellow" />

                <View
                    android:id="@+id/itemStatistic_view_deathsRate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>

            <View
                android:id="@+id/axysX"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorFineGray"
                app:layout_constraintEnd_toEndOf="@+id/itemFeed_linearLayout_graph"
                app:layout_constraintStart_toStartOf="@+id/itemFeed_linearLayout_graph"
                app:layout_constraintTop_toBottomOf="@+id/itemFeed_linearLayout_graph" />

            <View
                android:id="@+id/axysY"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/colorFineGray"
                app:layout_constraintBottom_toBottomOf="@+id/itemFeed_linearLayout_graph"
                app:layout_constraintEnd_toStartOf="@+id/itemFeed_linearLayout_graph"
                app:layout_constraintTop_toTopOf="@+id/itemFeed_linearLayout_graph" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:stretchColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemFeed_linearLayout_graph">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendTotal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorRed"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_total_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_total_hint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="56dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de contaminados"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_total"
                        app:layout_constraintEnd_toStartOf="@+id/activityStatistic_textView_total"
                        app:layout_constraintStart_toEndOf="@+id/legendTotal"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_total"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_total_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_total_hint" />


                    <View
                        android:id="@+id/view_total"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendRecoveries"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorGreen"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveries_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveries_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de recuperados"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_recoveries"
                        app:layout_constraintStart_toEndOf="@+id/legendRecoveries"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveries"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveries_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_recoveries_hint" />


                    <View
                        android:id="@+id/view_recoveries"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendDeaths"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_deaths_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_deaths_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de mortos"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_deaths"
                        app:layout_constraintStart_toEndOf="@+id/legendDeaths"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_deaths"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_deaths_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_deaths_hint" />


                    <View
                        android:id="@+id/view_deaths"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_constraintButton_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendRecoveriesRate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorYellow"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveriesRate_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveriesRate_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Taxa de recuperação"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_birthdate"
                        app:layout_constraintStart_toEndOf="@+id/legendRecoveriesRate"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveriesRate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="30%"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveriesRate_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_recoveriesRate_hint" />


                    <View
                        android:id="@+id/view_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_constraintButton_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendMortalityRate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_mortalityRate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_mortalityRate_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Taxa de mortalidade"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_name"
                        app:layout_constraintStart_toEndOf="@+id/legendMortalityRate"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_mortalityRate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="5%"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_mortalityRate_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_mortalityRate_hint" />

                    <View
                        android:id="@+id/view_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFineGray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>