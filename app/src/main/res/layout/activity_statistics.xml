<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/bg_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/activityStatistic_imageView_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:tint="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/activityStatistic_textView_country2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_regular"
            android:text="Estatisticas"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:stretchColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/activityStatistic_dynamicArcView_graph"
                        android:layout_width="240dp"
                        android:layout_height="220dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/activityStatistic_dynamicArcView_graph2"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_dynamicArcView_graph" />

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/activityStatistic_dynamicArcView_graph3"
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_dynamicArcView_graph" />

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/activityStatistic_dynamicArcView_graph4"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_dynamicArcView_graph" />

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/activityStatistic_dynamicArcView_graph5"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_dynamicArcView_graph" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen_regular"
                        android:text="Brazil"
                        android:textColor="@color/colorWhite"
                        android:textSize="26sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_dynamicArcView_graph"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_dynamicArcView_graph" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendTotal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#FBC02D"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_total_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_total_hint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="56dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de contaminados"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_total"
                        app:layout_constraintEnd_toStartOf="@+id/activityStatistic_textView_total"
                        app:layout_constraintStart_toEndOf="@+id/legendTotal"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_total"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_total_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_total_hint" />


                    <View
                        android:id="@+id/view_total"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/bg_graph"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendRecoveries"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorGreen"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveries_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveries_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de recuperados"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_recoveries"
                        app:layout_constraintStart_toEndOf="@+id/legendRecoveries"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveries"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveries_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_recoveries_hint" />


                    <View
                        android:id="@+id/view_recoveries"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/bg_graph"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendDeaths"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorRed"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_deaths_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_deaths_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Total de mortos"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_deaths"
                        app:layout_constraintStart_toEndOf="@+id/legendDeaths"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_deaths"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="1000"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_deaths_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_deaths_hint" />


                    <View
                        android:id="@+id/view_deaths"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/bg_graph"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_constraintButton_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendRecoveriesRate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorGreenRate"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveriesRate_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveriesRate_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Taxa de recuperação"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_birthdate"
                        app:layout_constraintStart_toEndOf="@+id/legendRecoveriesRate"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_recoveriesRate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="30%"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_recoveriesRate_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_recoveriesRate_hint" />


                    <View
                        android:id="@+id/view_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/bg_graph"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_constraintButton_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/legendMortalityRate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorRedRate"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_mortalityRate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_mortalityRate_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sen_bold"
                        android:lineSpacingExtra="0sp"
                        android:text="Taxa de mortalidade"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_name"
                        app:layout_constraintStart_toEndOf="@+id/legendMortalityRate"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityStatistic_textView_mortalityRate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/sen_regular"
                        android:text="5%"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/activityStatistic_textView_mortalityRate_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/activityStatistic_textView_mortalityRate_hint" />

                    <View
                        android:id="@+id/view_name"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/bg_graph"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>