<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#252424"
        android:elevation="6dp"
        card_view:cardCornerRadius="15dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/statistic_textView_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/statistic_textView_Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sen_bold"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                card_view:layout_constraintEnd_toStartOf="@+id/statistic_textView_newCases"
                card_view:layout_constraintHorizontal_bias="0.45"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:text="Brazil" />

            <TextView
                android:id="@+id/statistic_textView_Deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_regular"
                android:text="7"
                android:textColor="@color/colorRed"
                android:textSize="24sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textView5"
                card_view:layout_constraintEnd_toEndOf="@+id/textView5"
                card_view:layout_constraintStart_toStartOf="@+id/textView5" />

            <TextView
                android:id="@+id/statistic_textView_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_regular"
                android:text="1000"
                android:textColor="@color/colorYellow"
                android:textSize="24sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textView3"
                card_view:layout_constraintEnd_toEndOf="@+id/textView3"
                card_view:layout_constraintStart_toStartOf="@+id/textView3" />

            <TextView
                android:id="@+id/statistic_textView_newCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sen_bold"
                android:text="50"
                android:textColor="@color/colorYellow"
                android:textSize="18sp"
                card_view:layout_constraintStart_toEndOf="@+id/statistic_textView_Country"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistic_textView_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_regular"
                android:text="13"
                android:textColor="@color/colorGreen"
                android:textSize="24sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textView4"
                card_view:layout_constraintEnd_toEndOf="@+id/textView4"
                card_view:layout_constraintStart_toStartOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_bold"
                android:text="Total"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/statistics_linearLayout_graph"
                card_view:layout_constraintEnd_toStartOf="@+id/textView4"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_bold"
                android:text="Recuperados"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/statistics_linearLayout_graph"
                card_view:layout_constraintEnd_toStartOf="@+id/textView5"
                card_view:layout_constraintStart_toEndOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sen_bold"
                android:text="Mortos"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/statistics_linearLayout_graph"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sen_regular"
                android:isScrollContainer="true"
                android:text="Novos Casos"
                android:textColor="@color/colorYellow"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/imageView"
                card_view:layout_constraintStart_toEndOf="@+id/imageView"
                card_view:layout_constraintTop_toTopOf="@+id/imageView"
                card_view:layout_constraintVertical_bias="0.50" />

            <TextView
                android:id="@+id/statistic_textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/sen_regular"
                android:text="data"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/statistics_linearLayout_graph" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sen_regular"
                android:text="Data: "
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/statistic_textView_date"
                card_view:layout_constraintTop_toBottomOf="@+id/statistics_linearLayout_graph" />

            <LinearLayout
                android:id="@+id/statistics_linearLayout_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent">

                <View
                    android:id="@+id/statistic_view_confirmed"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorYellow" />


                <View
                    android:id="@+id/statistic_view_recovered"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorGreen" />

                <View
                    android:id="@+id/statistic_view_deaths"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorRed" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                card_view:layout_constraintBottom_toBottomOf="@+id/statistic_textView_newCases"
                card_view:layout_constraintStart_toEndOf="@+id/statistic_textView_newCases"
                card_view:layout_constraintTop_toTopOf="@+id/statistic_textView_newCases"
                card_view:srcCompat="@drawable/ic_icon_corona" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/colorFineGray"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/statistic_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sen_regular"
        android:text="Países Afetados"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>