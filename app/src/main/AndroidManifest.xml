<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sayhitoiot.coronanews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".support.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.reset.view.ResetPasswordActivity" />
        <activity android:name=".features.policy.ActivityReader" />
        <activity android:name="com.sayhitoiot.coronanews.features.favorites.ui.StatisticActivity" />
        <activity android:name=".features.splash.ui.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.main.HomeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.sayhitoiot.coronanews.features.sign.view.SignUpActivity" />
        <activity android:name=".features.login.view.LoginActivity" />
    </application>

</manifest>