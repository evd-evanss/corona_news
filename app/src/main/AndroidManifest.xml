<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sayhitoiot.coronanews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".support.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.reset.ResetPasswordActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".features.policy.ActivityReader" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".features.statistics.StatisticActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".features.splash.view.SplashActivity" android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.feed.HomeActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".features.sign.view.SignUpActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".features.login.view.LoginActivity" android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>